/**index.wxss**/
.container .headerBox {
  height: 100rpx;
  border-bottom: 3rpx solid #d8d8d8;
  width: 100%;
}

.headerBox {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.headerBox .city .iconfont {
  color: #cacaca;
}

.tabS {
  display: flex;
  width: 50%;
  justify-content: space-around;
  height: 100%;
  align-items: center;
}

.searchIcon {
  color: red;
  font-weight: 700;
}


.tabNav {
  z-index: 4;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #fff;
  display: flex;
  padding: 0 30rpx;
  border-bottom: 1px solid #f5f5f5;
  box-sizing: border-box;
}

.tabNav>view {
  text-align: center;
  margin-right: 50rpx;
}

.tabNav>view:last-child {
  margin-right: 0;
}

.tabNav>view text {
  padding: 0 15rpx;
  height: 75rpx;
  display: inline-block;
}

.tabNav .cur text {
  border-bottom: 5rpx solid #36ccf9;
  color: #000;
}

.active {
  color: red;
  border-bottom: 3rpx solid red;
  height: 100%;
  display: flex;
  align-items: center;
  font-weight: 700;
}
.listItem {
  width: 100vw;
  padding: 12px 14px 12px 0;
  height: 90px;
  max-height: 90px;
  position: relative;
  background-image: red;
}